{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description" : "Template to create kinesis data stream from shards to data store.",
    "Parameters" : {
        "RetentionPeriod" : {
            "Description" : "Data stream retention period in hours.",
            "Default" : "24",
            "Type" : "Number"
        },
        "TotalShard" : {
            "Description" : "Data stream total shard",
            "Default" : "3",
            "Type" : "Number"
        },
    },
    "Resources" : {
        "KinesisStream" : {
            "Type" : "AWS::Kinesis::Stream",
            "Properties" : {
                "Name" : "KinesisStream",
                "RetentionPeriodHours" : {
                    "Ref" : "RetentionPeriod"
                },
                "ShardCount" : {
                    "Ref" : "TotalShard"
                },
                "Tags" : [
                    {
                        "Key" : "Name",
                        "Value" : "KinesisStream"
                    }
                ]
            }
        },
    },
    "Outputs" : {
        "StreamName" : {
            "Value" : {
                "Ref" : "KinesisStream"
            },
            "Description" : "Newly created data stream name."
        }
    }
}
